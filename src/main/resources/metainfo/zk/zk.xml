<!-- an example to add zk.xml under spring-->
<zk>
    <client-config>
        <debug-js>true</debug-js>
    </client-config>
    <config-name>library</config-name>
    <session-config>
        <session-timeout>300</session-timeout>
        <timeout-uri>/timeout</timeout-uri>
    </session-config>
</zk>